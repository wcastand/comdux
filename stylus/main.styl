@import 'base.styl'

body
  line-height 1.5
  font-size 14px
  font-weight normal

.add-entry
  f()
  vertical()
  jcc()
  aic()
  acc()
  width 350px
  input
    width 100%
    padding 8px 4px
    margin 10px 0
    border none
    outline none
    color #A7A7A7
    font-size 1.1em
    border 1px solid #eee
    border-bottom: 4px solid #CCC
    transition border .3s $swift
    &:focus
      border-bottom: 4px solid #171718
  input[type="submit"]
      display none
